        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	if(current.requested_for == previous.requested_for){
		return;
	}

	var reqItem = new GlideRecord('sc_req_item');
	reqItem.addQuery('number', current.number);
	reqItem.query();

	if(reqItem.next()) {
		// add manager
		reqItem.watch_list = current.requested_for.manager.name;

		//add IT Admin group members
		var grpGr = new GlideRecord('sys_user_group');
		grpGr.get('name', 'Hardware');
		var groupID = grpGr.sys_id + '';
		var grpMbr  = new GlideRecord('sys_user_grmember');
		grpMbr.addQuery('group', groupID);
		grpMbr.query();
		while(grpMbr.next()){
			//gs.error(grpMbr.user.name);
            var user = grpMbr.user.name;
			reqItem.watch_list = reqItem.watch_list + ',' + user;
       }

		reqItem.update();
	}
})(current, previous);]]></script>
